{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "node",
      "vuetify"
    ],
    "paths": {
      "@/*": ["core/*"],
      "^/*": ["widgets/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "core/**/*.ts",
    "core/**/*.js",
    "core/**/*.umd.cjs",
    "core/**/*.d.ts",
    "core/**/*.tsx",
    "core/**/*.vue",
    "widgets/**/*.vue",
    "widgets/**/*.ts",
    "widgets/**/*.js",
    "widgets/**/*.d.ts",
    "widgets/**/*.tsx",
    "public/config.js"
   ]
}
