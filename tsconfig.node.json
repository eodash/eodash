{
    "compilerOptions": {
        "composite": true,
        "module": "esnext",
        "checkJs": true,
        "allowJs": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist"
    },
    "include": [
        "bin/**/*.js",
        "tests/cli/**/*.js",
        "tests/cli/**/*.spec.js",
        "tests/cli/**/*.test.js",
        "cypress.config.js"
    ],
}