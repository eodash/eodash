{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "baseUrl": ".",
        "outFile": "dist/types.d.ts",
        "target": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "composite": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "node",
            "vuetify"
        ],
        "paths": {
            "@/*": [
                "core/*"
            ],
            "^/*": [
                "widgets/*"
            ]
        }
    },
    "exclude": [
        "./core/**.js",
        "./core/**.ts",
    ],
    "include": [
        "./core/global.d.ts"
    ]
}